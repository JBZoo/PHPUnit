{
    "name"              : "jbzoo/phpunit",
    "type"              : "library",
    "description"       : "PHPUnit toolbox with short assert aliases and useful functions around testing",
    "license"           : "MIT",
    "keywords"          : ["phpunit", "jbzoo", "aliases", "short-syntax", "testing", "assert", "assertion", "debug"],

    "authors"           : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "require"           : {
        "php"                                : ">=7.2",
        "ext-filter"                         : "*",
        "ext-mbstring"                       : "*",

        "jbzoo/utils"                        : "^4.2.2",
        "hanneskod/classtools"               : "^1.2.1",

        "phpunit/phpunit"                    : ">=8.5.13",
        "phpunit/phpcov"                     : ">=6.0.1",
        "codedungeon/phpunit-result-printer" : ">=0.30.0",
        "ulrichsg/getopt-php"                : "^3.4.0"
    },

    "require-dev"       : {
        "jbzoo/codestyle"      : "^2.7.2",
        "jbzoo/data"           : "^4.1.2",
        "jbzoo/http-client"    : "^3.4.0",
        "jbzoo/composer-graph" : "^1.0.3",
        "jbzoo/toolbox-ci"     : "^1.3.4",
        "jbzoo/toolbox-dev"    : "^2.5.0",

        "guzzlehttp/guzzle"    : "^6.5.5",
        "symfony/process"      : ">=4.4"
    },

    "autoload"          : {
        "files" : [
            "src/functions/defines.php",
            "src/functions/aliases.php",
            "src/functions/tools.php"
        ],
        "psr-4" : {
            "JBZoo\\PHPUnit\\" : "src"
        }
    },

    "minimum-stability" : "dev",
    "prefer-stable"     : true,
    "config"            : {
        "optimize-autoloader" : true
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "4.x-dev"
        }
    }
}
